<% layout('layout/boilerplate') %>
<% layout('layout/boilerplate') %>
<form action="/signin" class="validated-form" novalidate>
    <div class="d-flex justify-content-center">
        <div class="card" style="width: 40rem;">

            <div class="card-body">
                <h5 class="card-title">
                    <label for="username" class="form-label">Username:</label>
                    <div class="input-group mb-3">
                        <input type="text" name="username" class="form-control" id="username" aria-describedby="basic-addon3">
                    </div>
                </h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                    card's
                    content.</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="mb-3">
                        <label for="firstname" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="firstname" name="firstname" >
                        <div id="emailHelp" class="form-text">Your id First Name</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="mb-3">
                        <label for="lastname" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="lastname" name="lastname" >
                        <div id="emailHelp" class="form-text">Your id Last Name</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="mb-3">
                        <label for="password" class="form-label">Your Password</label>
                        <input type="password" class="form-control" id="password" name="password" aria-describedby="passwordHelp">
                        <div id="passwordHelp" class="form-text">Your Password must have only alphabetic characters and
                            numbers</div>
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" id="password" name="password" aria-describedby="passwordHelp">
                        <div id="passwordHelp" class="form-text">Be sure you type your password correct by repeating it
                            once again!</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon3">Date of Birth</span>
                        <input type="date" class="form-control" id="dateofBirth" name="dateofBirth" aria-describedby="basic-addon3">
                    </div>
                </li>
                <li class="list-group-item">
                        <div class="card-body d-flex justify-content-center">
                            <button class="btn btn-info"> Register! </button>
                        </div>
                </li>

            </ul>
</form>
            
            <div class="card-body d-flex justify-content-center">
                <a href="/login" class="card-link">Log In</a>
                <a href="#" class="card-link">Admin</a>
            </div>
        </div>
    </div>