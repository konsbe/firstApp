<% layout('layout/boilerplate') %>

    <h1>
        <%= usedProduct.name %>
    </h1>
    <div class="card mb-3">
        <div class="row">
            <div class="col">
                <img src="<%= usedProduct.image %>" class="img-fluid rounded mx-auto d-block pt-5" alt="...">
            </div>

            <div class="col-md-8">
                <div class="align-middle">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= usedProduct.name %> - <%= usedProduct.date %> 
                        </h5>
                        <p class="card-text">
                            <%= usedProduct.description %>.
                        </p>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <a href="/used?subcategory=<%= usedProduct.subcategory %>">
                                    <%= usedProduct.subcategory %>
                                </a>
                            </li>
                            <li class="list-group-item" id="price">
                                
                                    â‚¬ <%= usedProduct.price; %>


                            </li>

                            <li class="list-group-item">
                                
                                    <%= usedProduct.company%>
                                
                            </li>
                            <li class="list-group-item">
                                <a href="/used?category=<%= usedProduct.category %>">
                                    <%= usedProduct.category %>
                                </a>
                            </li>
                            <li class="list-group-item">
                                <%= usedProduct.size %>
                            </li>

                        </ul>
                        <div class="card-body">
                            <form action="/used/<%= usedProduct._id %>?_method=DELETE" method="POST">
                                <a href="/used" class="text-decoration-none">
                                    <div class="d-inline p-2 bg-primary text-white">Back to all Used Products</div>
                                </a>
                                <a href="/used/<%=usedProduct._id%>/edit" class="text-decoration-none">
                                    <div class="d-inline p-2 bg-dark text-white">Edit</div>
                                </a>

                                <div class="d-inline p-2 bg-danger text-white"><button
                                        class="btn btn-link text-decoration-none">&#128465;&#65039;</button></div>
                            </form>

                            <form action="/shoppingcart" method="POST">
                                <button>U+1F6D2</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="mb-2 border-bottom border-end border-start">
    <h3>Leave a review</h3>
    <form action="/used/<%=usedProduct._id %>/reviews" method="POST" novalidate class="need-validation">
        <div class="input-group mb-3">
            <div class="mb-3 row mt-5">
                <label for="nickname" class="col-sm-2 col-form-label">Nickname</label>
                <div class="col-sm-10">
                    <input type="text" id="nickname" class="form-control ms-4" name="reviewused[nickname]"
                        placeholder="Nickname" aria-label="Username">

                </div>
            </div>

            <div class=" row ms-5 mt-5">
                <label for="rating" class="col-md-4 form-label">Rating:</label>
                <input type="range" class="col form-range" id="rating" min="1" max="5" name="reviewused[rating]"
                    placeholder="Server" aria-label="Server">
            </div>
        </div>
        <div>
            <label class="form-label" for="body">Review</label>
            <textarea class="form-control" name="reviewused[body]" id="body" cols="60" rows="3" required></textarea>
            <div class="valid-feedback">
                Looks Good!
            </div>
            <div class="text-end">
                <button class="btn btn-info mt-1 mb-2">Submit</button>
            </div>
        </div>
    </form>
</div>
<% for (let review of product.reviews){ %>
    <div class="card mb-2">
        <div class="card-body">
            <h5 class="card-title">Rating: <%= review.rating %>
            </h5>
            <p class="card-text">Review: <%= review.body %>
            </p>
            <form action='/used/<%=usedProduct._id %>/reviews/<%= review._id %>?_method=DELETE' method="POST">
                <button class="btn btn-danger">&#128465;&#65039;</button>
            </form>
        </div>
    </div>
    <% } %> 

