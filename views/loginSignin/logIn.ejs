<% layout('layout/boilerplate') %>
<form action="/login" method="POST" class="need-validation" novalidate>
<div class="d-flex justify-content-center">
    <div class="card" style="width: 40rem;">
        
        <div class="card-body">
            <h5 class="card-title">
                <label for="email" class="form-label">Email:</label>
                <div class="input-group mb-3">
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="basic-addon3">
                </div>
            </h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>
        </div>
        <ul class="list-group list-group-flush">
            
            <li class="list-group-item">
                <div class="mb-3">
                    <label for="password" class="form-label">Your Password</label>
                    <input type="password" class="form-control" name="password" id="password" aria-describedby="passwordHelp">
                    <div id="passwordHelp" class="form-text">Your Password must have only alphabetic characters and numbers</div>
                </div>
            
            </li>
            
        </ul>
        <button class="btn btn-primary"> Log In</button>
</form>
        <div class="card-body d-flex justify-content-center">
            <a href="/signin" class="card-link">Sign in</a>
            <a href="#" class="card-link">Admin</a>
        </div>
    </div>
</div>