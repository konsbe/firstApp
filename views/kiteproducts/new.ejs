<% layout('layout/boilerplate') %>

        <h1>Add a product to <%= firm.name %> </h1>
        <form action="/firms/<%= firm._id %>/kitesurf" method="POST" novalidate class="need-validation">
            <div class="mb-3">
                <label for="name" class="col-sm-2 col-form-label">name:</label>
                <input type="text" id="name" name="kiteproduct[name]" class="form-control" placeholder="product name" required>
            </div>
            <div class="mb-3">
                <label for="image" class="col-sm-2 col-form-label">image Url:</label>
                <input type="text" id="image" name="kiteproduct[image]" class="form-control" placeholder="image" required>
            </div>
            <div class="row g-3">
                <div class="col-auto">
                    <label for="company">company:</label>
                    <input type="text" name="kiteproduct[company]" class="form-label" id="company" placeholder="company" required>
                </div>
                <div class="col-auto">
                    <label for="category">category:</label>
                    <input type="text" id="category" name="kiteproduct[category]" class="form-label" placeholder="product category"
                        class="category" value="" required>
                </div>
                <div class="col-auto">
                    <select name='categories' id="categories" class="pb-1">
                        <option value="">none</option>
                        <% for (let product of kiteproducts) {%>
                            <option value="<%=product.category%>">
                                <%= product.category %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <div class="col-auto">
                    <label for="subcategory">subcategory:</label>
                    <input type="text" name="kiteproduct[subcategory]" class="form-label" id="subcategory" placeholder="product subcategory" required>
                </div>
                <div class="col-auto">
                    <label for="size">size:</label>
                    <input type="text" name="kiteproduct[size]" id="size" placeholder="size" required>
                </div>                
                

            </div>
            <label for="price" class="form-label">Price:</label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon3">â‚¬</span>
                <input type="text" class="form-control" name="kiteproduct[price]" id="price" aria-describedby="basic-addon3" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">description:</label>
                <textarea class="form-control" name="kiteproduct[description]" id="descritpion" placeholder="product description" rows="3" required></textarea>
                
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
        <div class="mt-5">
        <a href="/firms/<%=firm._id %> " class="text-decoration-none">
            <div class="d-inline p-2 bg-primary text-white">Back to <%= firm.name %> </div>
        </a>
        </div>

        <script>
            $('#categories').change(function () {
                // var selected = $(this).find("option:selected").text();
                // console.log($(this).val())
                $("input[id='category']").val($(this).val());
            });
        </script>

        <script>
            (function () {
                    'use strict'

                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    const forms = document.querySelectorAll('.need-validation')

                    // Loop over them and prevent submission
                    Array.from(forms)
                        .forEach(function (form) {
                            form.addEventListener('submit', function (event) {
                                if (!form.checkValidity()) {
                                    event.preventDefault()
                                    event.stopPropagation()
                                }

                                form.classList.add('was-validated')
                            }, false)
                        })
                })()
        </script>