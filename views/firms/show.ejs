<% layout('layout/boilerplate') %>

    <h1>
        <%= firm.name %>
    </h1>



    <a href="<%=firm.link %> "><p ><%= firm.link %></p></a>
<form action="/firms/<%= firm._id %>?_method=DELETE" method="POST">
    <a href="/firms" class="text-decoration-none">
        <div class="d-inline p-2 bg-primary text-white">Back to all Firms</div>
    </a>
    <a href="/firms/<%= firm._id %>/kitesurf/new " class="text-decoration-none">
        <div class="d-inline p-2 bg-primary text-white">Add Product</div>
    </a>
